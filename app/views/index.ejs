<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title><%= title %></title>
	<link href='//fonts.googleapis.com/css?family=Roboto:400,300,700' rel='stylesheet' type='text/css'>
	<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
	<link href="/css/style.css" rel="stylesheet">
</head>
<body<%= (isAuthenticated)? " data-username="+user.username : "" %>>
	<div class="content">
		<h2 class="title-bar"><%= title %></h2>
		<section class="chat">
			<div class="users">
				<div id="current_user">
					<% if (!isAuthenticated) { %>
						<a class="btnLogin" onclick="$('#loginForm').toggle('fast')">Login</a>
						<form name="loginForm" action="/login" method="POST" id="loginForm" style="display: block;" onsubmit="submitLogin(); return false;">
							<input type="text" name="username" placeholder="Username">
							<input type="password" name="password" placeholder="Password">
							<input type="submit" value="Log In" class="fright">
						</form>
					<% } %>
				</div>
				<ul class="user-list">
					<% if (isAuthenticated) { %>
						<li class="current_user"><%= user.username %></li>
					<% } %>
				</ul>
			</div>
			<div class="messages">
				<div class="user-messages"></div>
				<form class="form-new-msg">
					<input type="text" required class="form-text" >
					<input type="button" value="Send" class="form-submit">
				</form>
			</div>
		</section>
	</div>

	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
	<script>window.jQuery || document.write('<script src="/js/vendor/jquery-2.1.1.min.js"><\/script>')</script>
	<script src="/socket.io/socket.io.js"></script>
	<script src="/js/html_parser/html_parser.js"></script>
	<script src="/js/app.js"></script>
</body>
</html>
